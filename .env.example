# Configuración del Servidor
NODE_ENV=development
PORT=3000

# Base de Datos (Opcional - solo si usas MySQL/TiDB)
# DATABASE_URL=mysql://user:password@localhost:3306/asistente_senior

# OpenAI API (Para el asistente de voz con IA)
OPENAI_API_KEY=your_openai_api_key_here

# Configuración de la App
